
  <div class="row">
    <div class="container">
      <div class="col-md-4">
        <div class="panel">
          <div class="panel__head">
            <span class="panel__title">Information</span>
          </div>
          <div class="panel__content">
            <!-- Use @users.methods to learn more about user object. -->
            <p class="panel__text">There are <%= @users.size %> registered users!</p>
            <a class="button button--mustard" href="<%= home_index_path %>">Back to home</a>
            <a class="button button--mustard" href="<%= new_user_path %>">Add User</a>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <table class="table">
          <thead class="table__head">
            <th class="table__head_cell">Name</th>
            <th class="table__head_cell">Lastname</th>
            <th class="table__head_cell">Created</th>
            <th class="table__head_cell">Updated</th>
            <th class="table__head_cell">Actions</th>
          </thead>
          <tbody class="table__body">
            <% @users.each do |user| %>

            <td class="table__cell"><%= user.name %></td>
            <td class="table__cell"><%= user.last_name %></td>
            <td class="table__cell"><%= user.created_at.to_formatted_s(:long) %></td>
            <td class="table__cell"><%= user.updated_at.to_formatted_s(:long) %></td>
            <td class="table__cell">
              <%= link_to 'Edit', edit_user_path(user) %>
              <%= link_to 'Remove', user_path(user), method: :delete %>
              <%= link_to 'Show', user_path(user) %>
            </td>

            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
